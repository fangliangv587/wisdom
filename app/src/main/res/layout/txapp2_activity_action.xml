<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cenco.xz.fangliang.wisdom.weed.txapp2.TxActionActivity">

    <TextView
        android:id="@+id/realnameTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/realnameEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/realnameEt"
        android:text="真实姓名:"/>
    <TextView
        android:id="@+id/realnameEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/realnameTag"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:text=""/>

    <TextView
        android:id="@+id/phoneTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/realnameEt"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/phoneEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneEt"
        android:text="登录账户:"/>
    <TextView
        android:id="@+id/phoneEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/realnameEt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/phoneTag"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:text=""/>
    <TextView
        android:id="@+id/passTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/passEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/passEt"
        android:text="登录密码:"/>
    <TextView
        android:id="@+id/passEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/passTag"
        android:enabled="false"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>

    <TextView
        android:id="@+id/balanceTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/passEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/balanceEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/balanceEt"
        android:text="账户余额:"/>
    <TextView
        android:id="@+id/balanceEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/passEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/balanceTag"
        android:enabled="false"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/balanceEt"
        android:id="@+id/identifyBtn"
        android:text="认证"
        android:onClick="identifyClick"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/identifyBtn"
        app:layout_constraintTop_toBottomOf="@+id/balanceEt"
        android:id="@+id/withdrawBtn"
        android:text="提现"
        android:onClick="withdrawClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/withdrawBtn"
        app:layout_constraintTop_toBottomOf="@+id/balanceEt"
        android:id="@+id/withdrawlistBtn"
        android:text="后台提现记录"
        android:onClick="withdrawListClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/identifyBtn"
        android:id="@+id/incomeBtn"
        android:text="开始赚钱"
        android:onClick="incomeClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/incomeBtn"
        app:layout_constraintTop_toBottomOf="@+id/identifyBtn"
        android:id="@+id/balanceBtn"
        android:text="账户余额"
        android:onClick="balanceClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/balanceBtn"
        app:layout_constraintTop_toBottomOf="@+id/identifyBtn"
        android:id="@+id/localwithdrawlistBtn"
        android:text="本地提现记录"
        android:onClick="localWithdrawListClick"
        />

</android.support.constraint.ConstraintLayout>