<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mainView"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/normalViewStyle"
        android:text="透明度"/>

    <SeekBar
        style="@style/FullViewStyle"
        android:id="@+id/seekbar"/>
    <TextView
        style="@style/normalViewStyle"
        android:text="字体大小"/>

    <SeekBar
        style="@style/FullViewStyle"
        android:id="@+id/sizeseekbar"/>

    <CheckBox
        style="@style/normalViewStyle"
        android:text="响应式"/>
    <CheckBox
        style="@style/normalViewStyle"
        android:id="@+id/textDirection"
        android:text="水平展示"/>

    <TextView
        style="@style/normalViewStyle"
        android:text="字体颜色"/>

    <View
        style="@style/marginViewStyle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/textColorView"
        android:onClick="colorClick"
        android:background="#444444"
        />
    <CheckBox
        style="@style/normalViewStyle"
        android:id="@+id/bgCheck"
        android:text="背景颜色"/>

    <View
        style="@style/marginViewStyle"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/bgColorView"
        android:onClick="colorClick"
        android:background="#444444"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/normalViewStyle"
            android:text="间隔时间（秒）"
            />
        <EditText
            style="@style/FullViewStyle"
            android:id="@+id/intervalTime"
            android:inputType="number"/>

    </LinearLayout>

</LinearLayout>

</ScrollView>