<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cenco.xz.fangliang.wisdom.weed.txapp2.RegisterActivity"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/realnameTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/realnameEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/realnameEt"
        android:text="真实姓名:"/>
    <EditText
        android:id="@+id/realnameEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/realnameTag"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>

    <TextView
        android:id="@+id/phoneTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/realnameEt"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/phoneEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneEt"
        android:text="登录账户:"/>
    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/realnameEt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/phoneTag"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>
    <TextView
        android:id="@+id/passTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/passEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/passEt"
        android:text="登录密码:"/>
    <EditText
        android:id="@+id/passEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/passTag"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>

    <TextView
        android:id="@+id/macTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/passEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/macEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/macEt"
        android:text="MAC:"/>
    <EditText
        android:id="@+id/macEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/passEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/macTag"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>


    <EditText
        android:id="@+id/codeEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/macEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/codeBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/codeBtn"
        android:text=""/>

    <Button
        android:id="@+id/codeBtn"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/macEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/codeEt"
        app:layout_constraintHorizontal_weight="2"
        android:onClick="getCodeClick"
        android:text="获取验证码"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/codeBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="registerClick"
        android:text="注册"/>


</android.support.constraint.ConstraintLayout>