<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cenco.xz.fangliang.wisdom.weed.txapp2.RegisterActivity"
    android:padding="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/msgInfoTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/realnameEt"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="a"/>
    <TextView
        android:id="@+id/msgErrorTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/registeCountTv"
        app:layout_constraintLeft_toRightOf="@+id/msgInfoTv"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:text="b"/>

    <TextView
        android:id="@+id/registeCountTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/msgErrorTv"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:text="c"/>

    <TextView
        android:id="@+id/realnameTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/msgInfoTv"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/realnameEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/realnameEt"
        android:text="真实姓名:"/>
    <EditText
        android:id="@+id/realnameEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/msgInfoTv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/realnameTag"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:text=""/>

    <TextView
        android:id="@+id/phoneTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/realnameEt"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/phoneEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/phoneEt"
        android:text="登录账户:"/>
    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/realnameEt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/phoneTag"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:inputType="number"
        android:text=""/>
    <TextView
        android:id="@+id/passTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/passEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/passEt"
        android:text="登录密码:"/>
    <EditText
        android:id="@+id/passEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/passTag"
        android:enabled="false"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>

    <TextView
        android:id="@+id/macTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/passEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/macEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/macEt"
        android:text="MAC:"/>
    <EditText
        android:id="@+id/macEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/passEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/macTag"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:text=""/>


    <TextView
        android:id="@+id/visitTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/macEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/visitEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/visitEt"
        android:text="邀请码:"/>
    <EditText
        android:id="@+id/visitEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/macEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/visitTag"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:text=""/>


    <TextView
        android:id="@+id/codeResultTag"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/visitEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/codeResultEt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/codeResultEt"
        android:text="验证码标记:"/>
    <EditText
        android:id="@+id/codeResultEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/visitEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/codeResultTag"
        android:enabled="false"
        app:layout_constraintHorizontal_weight="2"
        android:text=""/>

    <EditText
        android:id="@+id/codeEt"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/codeResultEt"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toLeftOf="@+id/codeBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:enabled="false"
        app:layout_constraintBaseline_toBaselineOf="@+id/codeBtn"
        android:text=""/>

    <Button
        android:id="@+id/codeBtn"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/codeResultEt"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/codeEt"
        app:layout_constraintHorizontal_weight="2"
        android:enabled="false"
        android:onClick="getCodeClick"
        android:text="发送验证码"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/codeBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/msgPhoneBtn"
        android:enabled="false"
        android:onClick="msgPhoneClick"
        android:text="获取手机号验证码"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/codeBtn"
        app:layout_constraintLeft_toRightOf="@+id/msgPhoneBtn"
        android:onClick="registerClick"
        android:enabled="false"
        android:text="注册"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/msgPhoneBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/loopRegisterBtn"

        android:onClick="loopRegisterClick"
        android:text="开启循环注册"/>


</android.support.constraint.ConstraintLayout>